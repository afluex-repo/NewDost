            var TotalItems = parseFloat(Count) + 1;
            var TotalPrice = parseFloat(Price) + parseFloat(Price2);
            var val = $("#spantotal").text();
            var P = parseFloat(val) + parseFloat(Price);
            $("#total_price").val(P);
