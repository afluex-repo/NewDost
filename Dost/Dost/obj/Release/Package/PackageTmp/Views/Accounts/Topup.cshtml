    function FillAmount() {
        //$("#Fk_CityId").empty();
        var Productid = "";

        Productid = $('#Package').val();
        if (Productid == "4") {

            $("#divPlotNumber").show();
            $("#Amount").val('');
            $("#Amount").attr("disabled", false);
        }
        else {
            $("#divPlotNumber").hide();
            $("#Amount").attr("disabled", "disabled");
        }

        $.ajax({
            url: "/Accounts/FillAmount",
            Type: "Get",
            DataType: "JSON",
            data: { Productid: Productid },
            success: function (data) {
                debugger;
                $('#Amount').val(data.Amount);
