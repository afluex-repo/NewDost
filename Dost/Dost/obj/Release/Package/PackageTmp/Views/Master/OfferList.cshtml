@model Dost.Models.Master
@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Offer List
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("OfferList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <span style="color: red">
        @TempData["Offer"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Offer List


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Name</th>
                                        <th>Offer Validity</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lst != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lst)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.OfferName</td>
                                                    <td>@Item.OfferValidity</td>
                                                    <td>
                                                        <a href="/Master/OfferMaster?OfferId=@Item.OfferId" class="btn btn-info btn-sm">Edit</a>
                                                        <a href="/Master/DeletOffer?OfferId=@Item.OfferId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this offer?');" name="btnDelete">Delete</a>
                                                    </td>

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}
