@model Dost.Models.Master
@{
    ViewBag.Title = "AddEvent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Add Event
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("AddEvent", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <span style="color: red">
        @TempData["EventMsg"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Add Event
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.EventName, new { @placeholder = "Event Name", @class = "form-control" })
                                    @Html.HiddenFor(m => m.PK_EventId)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Location<span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.EventLocation, new { @class = "form-control", @placeholder = "Event Location" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">No. of Seats <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.NoOfSeats, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Event Price <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Start Date <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">End Date <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", @placeholder = "mm/dd/yyyy" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Select Offer</label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(m => m.OfferId, new SelectList(ViewBag.Offer, "Value", "Text"), "--Select--", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Select Category</label>
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(m => m.SubCategoryId, new SelectList(ViewBag.SubCategory, "Value", "Text"), new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Binary BV *</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.BinaryPercent, new { @class = "form-control", @placeholder = "Binary BV", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Referral BV *</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.ReferralPercent, new { @class = "form-control", @placeholder = "Referral BV", @required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">IGST <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.IGST, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">CGST <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.CGST, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">SGST <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.SGST, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Event Image</label>
                                <div class="col-sm-10">
                                    <input type="file" name="postedFile" id="Image" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Distributor Commission <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.DistributorCommission, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sponsor Commission <span style="color: red">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.SponsorCommission, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-sm-1 col-form-label">Description</label>
                                <div class="col-sm-11">
                                    @Html.TextAreaFor(m => m.EventDescription, new { @placeholder = "Description", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" id="BtnBanner" class="btn btn-success" name="Event" value="Submit" onclick="return validate();" />
                            <a class="btn btn-primary" href="/Master/EventList">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ui-timepicker-addon/1.6.3/jquery-ui-timepicker-addon.min.js"></script>
<script>
    jQuery(function ($) {
        $("#StartDate").datetimepicker(
            {
                dateFormat: 'mm/dd/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-60:+0"
            });
        $("#EndDate").datetimepicker(
          {
              dateFormat: 'mm/dd/yy',
              changeMonth: true,
              changeYear: true,
              yearRange: "-60:+0"
          });
    });
    var id = $("#PK_EventId").val();
    if (id != null && id != 0) {
        $("#BtnBanner").val("Update");
    }
    function validate() {
        $(".errortext").removeClass("errortext");
        if ($('#EventName').val() == '') {
            $("#EventName").addClass('errortext');
            $('#EventName').focus();
            return false;
        }
        if ($('#ProductPrice').val() == '') {
            $("#ProductPrice").addClass('errortext');
            $('#ProductPrice').focus();
            return false;
        }
        if ($('#StartDate').val() == '') {
            $("#StartDate").addClass('errortext');
            $('#StartDate').focus();
            return false;
        }
        if ($('#EndDate').val() == '') {
            $("#EndDate").addClass('errortext');
            $('#EndDate').focus();
            return false;
        }
        if ($('#EventLocation').val() == '') {
            $("#EventLocation").addClass('errortext');
            $('#EventLocation').focus();
            return false;
        }
        if ($('#IGST').val() == '') {
            $("#IGST").addClass('errortext');
            $('#IGST').focus();
            return false;
        }
        if ($('#CGST').val() == '') {
            $("#CGST").addClass('errortext');
            $('#CGST').focus();
            return false;
        }
        if ($('#SGST').val() == '') {
            $("#SGST").addClass('errortext');
            $('#SGST').focus();
            return false;
        }
        if ($('#DistributorCommission').val() == '') {
            $("#DistributorCommission").addClass('errortext');
            $('#DistributorCommission').focus();
            return false;
        }
        if ($('#SponsorCommission').val() == '') {
            $("#SponsorCommission").addClass('errortext');
            $('#SponsorCommission').focus();
            return false;
        }
    }
</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>