@model Dost.Models.Home

@{
    ViewBag.Title = "GenerateNFCCode";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    NFC
                </a>
            </li>
            <li class="active">
                Generate NFC Code
            </li>
        </ol>
    </div>
</div>
<br />

@using (Html.BeginForm("GenerateNFCCode", "Admin", FormMethod.Post, new { @class = "form-style-1 user-pro", @id = "form1", enctype = "multipart/form-data" }))
{
    <span style="color: red">
        @TempData["Msg"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Genrate NFC Code
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group mb-12 mb-12">
                                <label class="col-sm-1 col-form-label "> Quantity <span style="color: red">*</span> </label>
                                <div class="col-sm-5">
                                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @Placeholder = "Enter number", @onkeypress = "return isNumberKey(event)" })
                                    <span id="txtname" style="color:blue" class="pull-left"></span>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-sm-5">
                                    <input type="submit" value="Generate" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }
</script>

