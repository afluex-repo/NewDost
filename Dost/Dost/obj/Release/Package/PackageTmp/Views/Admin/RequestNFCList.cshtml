@model Dost.Models.Home

@{
    ViewBag.Title = "RequestNFCList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Admin
                </a>
            </li>
            <li class="active">
                Inventory Request List
            </li>
        </ol>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Inventory Request List
            </div>
            <div class="panel-body">
                <div class="panel-body table-responsive">
                    <p style="color:red">@TempData["Msg"]</p>
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Login Id</th>
                                <th>Name</th>
                                <th>Quantity</th>
                                <th>Category</th>
                                <th>Requested Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lst != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lst)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.LoginId</td>
                                            <td>@Item.DisplayName</td>
                                            <td>@Item.Quantity</td>
                                            <td>@Item.Category</td>
                                            <td>@Item.ToDate</td>
                                            <td>
                                                @if (Item.Status == "")
                                                {
                                                    <a href="/Admin/AcceptRequest?id=@Item.RequestId" class="btn btn-primary">Accept</a>
                                                    <a href="/Admin/CancelRequest?id=@Item.RequestId" class="btn btn-danger">Cancel</a>
                                                }
                                                else
                                                {
                                                    <p>@Item.Status</p>
                                                }

                                            </td>
                                        </tr>
                                        i++;
                                    }

                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



