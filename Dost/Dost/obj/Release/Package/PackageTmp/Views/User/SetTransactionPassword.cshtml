@model Dost.Models.Password

@{
    ViewBag.Title = "SetTransactionPassword";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using (Html.BeginForm("SetTransactionPassword", "User", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome back!</h4>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active"><a href="/User/SetTransactionPassword">User/Set Password</a></li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Set Password</h4>
                        </div>
                        <div class="card-body">
                            <div class="row justify-content-center h-100 align-items-center">
                                <div class="basic-form">
                                    <div class="form-group">
                                        <label class="mb-1"><strong>Mobile Number</strong></label>
                                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @maxlength = "10", @onkeypress = "return isNumberKey(event);", @required = "required", @minlength = "10", @placeholder = "Type Your Registered Mobile Number" })

                                    </div>
                                    <div class="text-center mt-4">
                                        <input class="btn btn-primary btn-block" type="submit" value="Validate Mobile" id="btnUpdate" name="btnUpdate" onclick="return validate();">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #3b3363 !important;
    }
</style>
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
@if (TempData["ForgetPassword"] != null)
{
    if (TempData["ForgetPassword"] == "Temporary Password is sent to your mobile no.")
    {
        <script>

            $(document).ready(function () {
                toastr.success("@TempData["ForgetPassword"]", "Success", {
                    positionClass: "toast-top-right",
                    timeOut: 5e3,
                    closeButton: !0,
                    debug: !1,
                    newestOnTop: !0,
                    progressBar: !0,
                    preventDuplicates: !0,
                    onclick: null,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: !1
                })
            }
        )
        </script>
    }
    else
    {
        <script>
            $(document).ready(function () {
                toastr.error("@TempData["ForgetPassword"]", "Error", {
                    positionClass: "toast-top-right",
                    timeOut: 5e3,
                    closeButton: !0,
                    debug: !1,
                    newestOnTop: !0,
                    progressBar: !0,
                    preventDuplicates: !0,
                    onclick: null,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: !1
                })
                $('#Mobile').val('');
            })
        </script>
    }
}
<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function validate() {
        if ($('#Mobile').val() == '') {
            $("#Mobile").addClass('errortext');
            $('#Mobile').focus();
            return false;
        }

    }
</script>