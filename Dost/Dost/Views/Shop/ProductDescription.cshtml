@model Dost.Models.Shop

@{
    ViewBag.Title = "ProductDescription";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@using (Html.BeginForm("ProductDescription", "Shop", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <!-- Add Project -->

            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome back!</h4>
                        <p class="mb-0">Product</p>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <a href="@Url.Action("EWalletRequest","Wallet")" id="aDwalletAddfund" style="display:none;">Add Fund</a>
                    <ol class="breadcrumb">
                        <!-- <li class="breadcrumb-item"><a href="javascript:void(0)">Layout</a></li> -->
                        <li class="breadcrumb-item active"><a href="/Shop/CheckOut?cardid=@Model.PK_EventId">Cart :(@ViewBag.TotalItem)</a></li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-3 col-lg-6  col-md-6 col-xxl-5 ">
                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade show active" id="first">
                                            <img class="img-fluid" src="@Model.EventImage" alt="">
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="second">
                                            <img class="img-fluid" src="@Model.EventImage" alt="">
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="third">
                                            <img class="img-fluid" src="@Model.EventImage" alt="">
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="for">
                                            <img class="img-fluid" src="@Model.EventImage" alt="">
                                        </div>
                                    </div>
                                    <div class="tab-slide-content new-arrival-product mb-4 mb-xl-0">
                                        <!-- Nav tabs -->
                                        <ul class="nav slide-item-list mt-3" role="tablist">
                                            <li role="presentation" class="show">
                                                <a href="#first" role="tab" data-toggle="tab">
                                                    <img class="img-fluid" src="@Model.EventImage" alt="" width="50">
                                                </a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#second" role="tab" data-toggle="tab"><img class="img-fluid" src="@Model.EventImage" alt="" width="50"></a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#third" role="tab" data-toggle="tab"><img class="img-fluid" src="@Model.EventImage" alt="" width="50"></a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#for" role="tab" data-toggle="tab"><img class="img-fluid" src="@Model.EventImage" alt="" width="50"></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <!--Tab slider End-->
                                <div class="col-xl-9 col-lg-6  col-md-6 col-xxl-7 col-sm-12">
                                    <div class="product-detail-content">
                                        <!--Product details-->
                                        <div class="new-arrival-content pr">
                                            <input type="hidden" value="@ViewBag.WalletBalance" id="txtDigiWalletAmount" />
                                            <h4>
                                                @Model.ProductName
                                            </h4>

                                            <div class="d-table mb-2">
                                                <p id="txtofferprice" class="price float-left d-block">₹ @Model.OfferPrice</p>
                                            </div>
                                            <p>
                                                Discount: <span id="" class="item">@Model.Discount</span>
                                                <input type="hidden" id="hdnDiscount" />
                                            </p>
                                            <p>
                                                BV: <span class="item">
                                                    <label class="item" id="txtBusinessValume">₹ 0.00</label>
                                                    <input type="hidden" id="hdnBusinessValume" />
                                                </span>
                                            </p>

                                            <p>
                                            <p>
                                                Availability: @if (Model.NoOfSeats == "0" || Model.NoOfSeats == "")
                                                {
                                                    <input id="NoofSeats" type="hidden" value="@Model.NoOfSeats" />
                                                    <span class="item"> Out of stock <i class="fa fa-check-circle text-danger"></i></span>
                                                }
                                                else
                                                {
                                                    <input id="NoofSeats" type="hidden" value="@Model.NoOfSeats" />
                                                    <span class="item"> In stock <i class="fa fa-check-circle text-success"></i></span>
                                                }
                                            </p>
                                            <p>Product code: <span class="item">@Model.ProductCode</span> </p>
                                            <p>Brand: <span class="item">@Model.Brand</span></p>
                                            <p>
                                                    Product tags:&nbsp;&nbsp;
                                                    <span class="badge badge-success light">bags</span>
                                                    <span class="badge badge-success light">clothes</span>
                                                    <span class="badge badge-success light">shoes</span>
                                                    <span class="badge badge-success light">dresses</span>
                                                </p>
                                            <p class="text-content">
                                                @Model.EventDescription
                                            </p>
                                            <div class="col-2 px-0">
                                                <input type="number" name=NumberOfItems id="NumberOfItems" min="1" class="form-control input-btn input-number" value="1" onchange="return TotalCalPrice()">
                                            </div>
                                           
                                            <div class="shopping-cart mt-3">
                                                <a onclick="return change();" href="#" class="btn btn-primary btn-lg" data-id="@Model.PK_EventId" id="btn_Add">
                                                    <i class="fa fa-shopping-basket mr-2"></i>Add
                                                    to cart
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- review -->
                <div class="modal fade" id="reviewModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Review</h5>
                                <button type="button" class="close" data-dismiss="modal">
                                    <span>&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="text-center mb-4">
                                        <img class="img-fluid rounded" width="78" src="./images/avatar/1.jpg" alt="DexignZone">
                                    </div>
                                    <div class="form-group">
                                        <div class="rating-widget mb-4 text-center">
                                            <!-- Rating Stars Box -->
                                            <div class="rating-stars">
                                                <ul id="stars">
                                                    <li class="star" title="Poor" data-value="1">
                                                        <i class="fa fa-star fa-fw"></i>
                                                    </li>
                                                    <li class="star" title="Fair" data-value="2">
                                                        <i class="fa fa-star fa-fw"></i>
                                                    </li>
                                                    <li class="star" title="Good" data-value="3">
                                                        <i class="fa fa-star fa-fw"></i>
                                                    </li>
                                                    <li class="star" title="Excellent" data-value="4">
                                                        <i class="fa fa-star fa-fw"></i>
                                                    </li>
                                                    <li class="star" title="WOW!!!" data-value="5">
                                                        <i class="fa fa-star fa-fw"></i>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <textarea class="form-control" placeholder="Comment" rows="5"></textarea>
                                    </div>
                                    <button class="btn btn-success btn-block">RATE</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/vendor/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        debugger
        var NoofSeats = $('#NoofSeats').val();
        {
            if (NoofSeats == 0 || NoofSeats == "") {

                $('#btn_Add').addClass('disabled');
                $('#NumberOfItems').attr('disabled', 'disabled');
            }
            else {

                $('#btn_Add').removeClass('disabled');
                $('#NumberOfItems').removeAttr('disabled');
            }
        }
     
    });


    function change() {
        debugger
        var NoofItems = $('#NumberOfItems').val();
        if (NoofItems == 0 || NoofItems == "") {
            $(document).ready(function () {
                toastr.error("Please Select Product Item", "Error", {
                    positionClass: "toast-top-right",
                    timeOut: 5e3,
                    closeButton: !0,
                    debug: !1,
                    newestOnTop: !0,
                    progressBar: !0,
                    preventDuplicates: !0,
                    onclick: null,
                    showDuration: "300",
                    hideDuration: "1000",
                    extendedTimeOut: "1000",
                    showEasing: "swing",
                    hideEasing: "linear",
                    showMethod: "fadeIn",
                    hideMethod: "fadeOut",
                    tapToDismiss: !1
                })
               
            }
             )
            $("#NumberOfItems").focus();
            $("#NumberOfItems").val('1');
            return false;
        }
        var qty = $("#NumberOfItems").val();
        var NoofSeats = $('#NoofSeats').val();
        if (Number(qty) > 0) {
            if (Number(qty) > Number(NoofSeats)) {
                $(document).ready(function () {
                    toastr.error("Select quantity is more than available quantiy !!", "Error", {
                        positionClass: "toast-top-right",
                        timeOut: 5e3,
                        closeButton: !0,
                        debug: !1,
                        newestOnTop: !0,
                        progressBar: !0,
                        preventDuplicates: !0,
                        onclick: null,
                        showDuration: "300",
                        hideDuration: "1000",
                        extendedTimeOut: "1000",
                        showEasing: "swing",
                        hideEasing: "linear",
                        showMethod: "fadeIn",
                        hideMethod: "fadeOut",
                        tapToDismiss: !1
                    })
                    $("#NumberOfItems").val(NoofSeats)
                })
                return false;
            }
            else {
                $("#NumberOfItems").val(qty)
            }
        }
        var CardId = $('#btn_Add').attr('data-id');
        $.ajax({
            url: '/Shop/AddToCard',
            Type: "Get",
            DataType: "JSON",
            data: {
                NoofItems: NoofItems, CardId: CardId
            },
            success: function (result) {
                if (result.Result == "Yes") {
                    debugger
                    var id = result.PK_EventId;
                    window.location.href = "/Shop/CheckOut?cardid=" + id;
                    @*window.location.href = '@Url.Action("ConfirmationPage", "Home")';*@
                    $("#NumberOfItems").val('1');

                }
            },
        });
    }
    function TotalCalPrice() {
        debugger
        var qty = $("#NumberOfItems").val();
        var NoofSeats = $('#NoofSeats').val();
        if (Number(qty) > 0) {
            if (Number(qty) > Number(NoofSeats)) {
                $(document).ready(function () {
                    toastr.error("Select quantity is more than available quantiy !!", "Error", {
                        positionClass: "toast-top-right",
                        timeOut: 5e3,
                        closeButton: !0,
                        debug: !1,
                        newestOnTop: !0,
                        progressBar: !0,
                        preventDuplicates: !0,
                        onclick: null,
                        showDuration: "300",
                        hideDuration: "1000",
                        extendedTimeOut: "1000",
                        showEasing: "swing",
                        hideEasing: "linear",
                        showMethod: "fadeIn",
                        hideMethod: "fadeOut",
                        tapToDismiss: !1
                    })
                    $("#NumberOfItems").val(NoofSeats)
                })
                return false;
            }
            else {
                $("#NumberOfItems").val(qty)
            }
        }
        return true;
    }
</script>