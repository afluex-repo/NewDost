@model Dost.Models.Shop

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
@using (Html.BeginForm("Product", "Shop", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="content-body">
        <div class="container-fluid">
            <!-- Add Project -->

            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, welcome back!</h4>
                        <p class="mb-0">Product</p>
                    </div>
                </div>
                <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                    <ol class="breadcrumb">
                        <!-- <li class="breadcrumb-item"><a href="javascript:void(0)">Layout</a></li> -->
                        <li class="breadcrumb-item active"><a href="javascript:void(0)">Product</a></li>
                    </ol>
                </div>
            </div>
            <div class="row">
                @if (Model != null)
                {
                    if (Model.lstproduct != null)
                    {
                        int i = 1;
                        foreach (var Item in Model.lstproduct)
                        {

                            <div class="col-lg-12 col-xl-6">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row m-b-30">
                                            <div class="col-md-5 col-xxl-12">
                                                <div class="new-arrival-product mb-4 mb-xxl-4 mb-md-0">
                                                    <div class="new-arrivals-img-contnent">
                                                        <a href="/Shop/ProductDescription?EventId=@Item.PK_EventId">
                                                            <img class="img-fluid" src="@Item.EventImage" alt="">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-7 col-xxl-12">
                                                <div class="new-arrival-content position-relative">
                                                    <h4>
                                                        <a href="/Shop/ProductDescription?EventId=@Item.PK_EventId">@Item.ProductName</a></h4>
                                                    <div class="comment-review star-rating">
                                                        <ul>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                            <li><i class="fa fa-star"></i></li>
                                                        </ul>
                                                        <span class="review-text">(High Quality)</span>
                                                        <span class="price">₹ @Item.OfferPrice</span>
                                                        <span class="main-price text-danger m-1" style="float: right; font-size: 18px; text-decoration: line-through;">₹ @Item.ProductPrice</span>
                                                    </div>
                                                    
                                                  
                                                    <div class="comment-review star-rating">
                                                    </div>
                                                    <p>BV: <span class="item">₹ @Item.BV</span></p>
                                                    <p>
                                                        Availability: @if (Item.NoOfSeats == "0" || Item.NoOfSeats == "")

                                                        {
                                                            <span class="item"> Out of stock <i class="fa fa-check-circle text-danger"></i></span>
                                                        }
                                                        else
                                                        {
                                                            <span class="item"> In stock <i class="fa fa-check-circle text-success"></i></span>
                                                        }
                                                    </p>
                                                    <p>Product code: <span class="item">@Item.ProductCode</span> </p>
                                                    <p>Brand: <span class="item">@Item.Brand</span></p>
                                                    <p class="text-content">@Item.EventDescription</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            i = i + 1;
                        }
                    }
                }
            </div>
        </div>
    </div>
}
