@model Dost.Models.Master

@{
    ViewBag.Title = "NFC";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                NFC
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("NFC", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <span style="color: red">
        @TempData["NFCMsg"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    NFC
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Type <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.NFCType, new { @placeholder = "Type", @class = "form-control" })
                                    @Html.HiddenFor(m => m.PK_NFcId)
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Price <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.ProductPrice, new { @class = "form-control", @placeholder = "Price ", @onkeypress = "return isNumberKey(event)", @onchange = "getPrice(this);" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Offer Price <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.OfferPrice, new { @placeholder = "Offer Price", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Discount <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Discount, new { @class = "form-control", @required = "required"})
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Delivery and Handling Charges <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.DeliveryCharge, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Catalyst BV</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Catalyst, new { @placeholder = "Catalyst", @class = "form-control",@onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Blaze BV</label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Blaze, new { @class = "form-control",@placeholder= "Blaze",@onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
