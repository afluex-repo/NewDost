                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">IGST <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.IGST, new { @class = "form-control", @placeholder = "IGST", @onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">CGST <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.CGST, new { @class = "form-control", @placeholder = "CGST", @onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">SGST <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.SGST, new { @class = "form-control", @placeholder = "SGST", @onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Brand </label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", @placeholder = "Brand" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Quantity <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @placeholder = "Quantity", @onkeypress = "return isNumberKey(event)" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label">Description <span style="color: red">*</span></label>
                                <div class="col-sm-8">
                                    @Html.TextAreaFor(m => m.Description, new { @placeholder = "Description", @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="submit" id="btnSave" class="btn btn-success" name="btnSave" value="Save" onclick="return validate();" />
                            <a class="btn btn-primary" href="/Master/NFCList">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
