@model Dost.Models.Master
@{
    ViewBag.Title = "CouponList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Coupon List
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("CouponList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <span style="color: red">
        @TempData["Coupon"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Coupon List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">

                        <div class="col-sm-4">
                            <label>Coupon Code</label>
                            @Html.TextBoxFor(m => m.CouponCode, new { @class = "form-control", @placeholder = "Coupon Code" })
                        </div>
                        <div class="col-sm-4">
                            <input type="submit" style="margin-top:20px;" id="BtnCoupon" class="btn btn-success" name="btnCoupon" value="Search" />
                        </div>

                        <div class="col-sm-4">
                            <a href="/Master/CouponMaster" style="margin-top:20px; border:100%;" class="btn btn-primary">Add New</a>
                        </div>
                    </div>
                    <br /><br /><br />
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Coupon Type</th>
                                        <th>Coupon</th>
                                        <th>Price</th>
                                        <th>Validity Date</th>
                                        <th>Range From</th>
                                        <th>Range To</th>
                                        <th>Coupon Code</th>
                                        <th>Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstCoupon != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstCoupon)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.CouponType</td>
                                                    <td>@Item.Coupon</td>
                                                    <td>@Item.Price</td>
                                                    <td>@Item.ValidityDate</td>
                                                    <td>@Item.RangeFrom</td>
                                                    <td>@Item.RangeTo</td>
                                                    <td>@Item.CouponCode</td>
                                                    <td>
                                                        <a href="/Master/CouponMaster?Id=@Item.PK_CouponId" class="btn btn-info btn-sm">Edit</a>
                                                        <a href="/Master/DeleteCoupon?Id=@Item.PK_CouponId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this coupon?');">Delete</a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
