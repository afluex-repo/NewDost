@model Dost.Models.Master

@{
    ViewBag.Title = "BannerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Banner List
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("BannerList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <span style="color: red">
        @TempData["Banner"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Banner List


                </div>
               
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example3" class="table table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Banner Title</th>
                                        <th>Trailar Link</th>
                                        @*<th>Fav Status</th>*@
                                        <th>Description</th>
                                        <th>Banner Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstBanner != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstBanner)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.BannerTitle</td>
                                                    <td><a>@Item.Trailer</a></td>
                                                    @*<td>@Item.FavStatus</td>*@
                                                    <td>@Item.Description</td>
                                                    <td><img src="@Url.Content(Item.BannerImage)" style="width:50px;" class="rounded-circle author-box-picture" sty="" /></td>
                                                    <td>
                                                        <a href="/Master/Banner?bannerid=@Item.BannerId" class="btn btn-info btn-sm">Edit</a>
                                                        <a href="/Master/DeleteBanner?bannerid=@Item.BannerId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this banner details?');" name="btnDelete">Delete</a>
                                                        @*<a href="/Master/EditProduct/@Item.ProductID" runat="server" class="btn btn-info btn-sm pull-right" name="btnEdit">Edit</a>*@

                                                    </td>

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
               
            </div>
        </div>

    </div>

}
@*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">*@

@*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>*@
<script>
    $(document).ready(function () {
        var table = $('#example3').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>