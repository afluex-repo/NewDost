@model Dost.Models.Master

@{
    ViewBag.Title = "NFCList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                NFC List
            </li>

        </ol>


    </div>
</div>
<br />
@using (Html.BeginForm("NFCList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <span style="color: red">
        @TempData["NFC"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    NFC List


                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Type</th>
                                        <th>Price</th>
                                        <th>Offer</th>
                                        <th>Image</th>
                                        @*<th>Binary Percentage</th>*@
                                        <th>Referral Percentage</th>
                                        <th>Description</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lst != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lst)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.EventName</td>
                                                    <td>@Item.ProductPrice</td>
                                                    <td>@Item.OfferName</td>
                                                  
                                                    <td><img src="@Item.EventImage" height="100" width="100" /></td>
                                                    @*<td>@Item.BinaryPercent</td>*@
                                                    <td>@Item.ReferralPercent</td>
                                                    <td>@Item.EventDescription</td>
                                                    <td>
                                                        <a href="/Master/NFC?NFCId=@Item.PK_NFcId" class="btn btn-info btn-sm">Edit</a>
                                                        <a href="/Master/DeletNFC?NFCId=@Item.PK_NFcId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this nfc details?');" name="btnDelete">Delete</a>
                                                    </td>

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}
