@model Dost.Models.Master
@{
    ViewBag.Title = "OfferMaster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Add Offer
            </li>
        </ol>
    </div>
</div>
<br />
@using (Html.BeginForm("OfferMaster", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <span style="color: red">
        @TempData["Offer"]
    </span>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Add Offer
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Name <span style="color: red">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.OfferName, new { @placeholder = "Offer Name", @class = "form-control" })
                                @Html.HiddenFor(m => m.OfferId)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Offer Validity <span style="color: red">*</span></label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.OfferValidity, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" id="BtnOffer" class="btn btn-success" name="Event" value="Submit" onclick="return validate();" />
                        <a class="btn btn-primary" href="/Master/OfferList">Back To List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}

