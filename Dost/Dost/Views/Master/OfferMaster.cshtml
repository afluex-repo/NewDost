    //            dateFormat: 'mm/dd/yy',
    //            changeMonth: true,
    //            changeYear: true,
    //            yearRange: "-60:+0"
    //        });
    //});
    
    var id =$("#OfferId").val();
    if( id != null && id !=0)
    {
        $("#BtnOffer").val("Update");
    }

    function validate()
    {
        $(".errortext").removeClass("errortext");
        if ($('#OfferName').val() == '') {
            $("#OfferName").addClass('errortext');
            $('#OfferName').focus();
            return false;
        }
        if ($('#OfferValidity').val() == '') {
            $("#OfferValidity").addClass('errortext');
            $('#OfferValidity').focus();
            return false;
        }
    }
</script>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>