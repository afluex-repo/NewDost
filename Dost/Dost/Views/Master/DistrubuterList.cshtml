@model Dost.Models.clsDistributor

@{
    ViewBag.Title = "DistrubuterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row">
    <div class="col-sm-12">

        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                    Master
                </a>
            </li>
            <li class="active">
                Distributor List
            </li>

        </ol>
        <div>

        </div>

    </div>
    <div>

    </div>
</div>
<br />
@using (Html.BeginForm("DistributerList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <span style="color: red">
        @TempData["NFC"]
    </span>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Distributor List

                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12 table-responsive">
                            <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Name</th>
                                        <th>Company Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>LoginId</th>
                                        <th>Website</th>
                                        <th>Company Address</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lst != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lst)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.YourName</td>
                                                    <td>@Item.CompanyName</td>
                                                    <td>@Item.Email</td>


                                                    <td>@Item.Mobile</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Website</td>
                                                    <td>@Item.CompanyAddress</td>


                                                    @if (@Item.Status == "Approved")
                                                    {
                                                        <td style="color:forestgreen">
                                                            <i class="fa fa-check" style="font-size:28px;color:green"></i>
                                                        </td>
                                                        <td hidden>
                                                            <a href="/Master/ApproveDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-info btn-sm">Approve</a>
                                                            <a href="/Master/RejectDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this distributior?');" name="btnDelete">Reject</a>
                                                        </td>
                                                        <td></td>

                                                    }
                                                    else if (@Item.Status == "Rejected")
                                                    {
                                                        <td style="color:red">
                                                            @*<b>@Item.Status</b>*@

                                                            <i class="fa fa-close" style="font-size:28px;color:red"></i>

                                                        </td>
                                                        <td hidden>
                                                            <a href="/Master/ApproveDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-info btn-sm">Approve</a>
                                                            <a href="/Master/RejectDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this distributior?');" name="btnDelete">Reject</a>
                                                        </td>
                                                        <td>
                                                           
                                                        </td>

                                                    }
                                                    else
                                                    {
                                                        <td style="color:black">
                                                            @Item.Status
                                                        </td>
                                                        <td>
                                                            <a href="/Master/ApproveDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-info btn-sm">Approve</a>
                                                            <a href="/Master/RejectDistrubutor?Pk_DistributorId=@Item.Pk_DistributorId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this distributior?');" name="btnDelete">Reject</a>
                                                        </td>
                                                       
                                                    }


                                                   

                                                </tr>

                                                i++;
                                            }
                                        }
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}