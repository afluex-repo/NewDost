@model Dost.Models.Wallet
@{
    ViewBag.Title = "WithdrawlRequestList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        <br />
        @*<h4 class="page-header">Approve Ewallet Request</h4>*@
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                 Withdrawl Request


            </div>
            <br />
            <div>
                <span style="color: red;margin-left:40px;">

                    <b>@TempData["EApproveRequest"]</b>
                </span>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table id="example3" class="table table-striped" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Sr No.</th>
                            <th>Login Id</th>
                            <th>Name</th>
                            <th>Requested Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            if (Model.WalletRequestList != null)
                            {
                                int i = 1;
                                foreach (var Item in Model.WalletRequestList)
                                {
                                    <tr class="text-left">
                                        <td>@i</td>
                                        <td>@Item.LoginId</td>
                                        <td>@Item.DisplayName</td>
                                        <td>@Item.AddedOn</td>
                                        <td>@Item.Amount</td>
                                        <td>@Item.Status</td>
                                        <td>
                                            @if (Item.Status == "Pending")
                                            {
                                                <a class="btn btn-success btn-sm" href="/AdminReports/Approve?Id=@Item.Pk_RequestId">Approve</a>
                                                <a class="btn btn-danger btn-sm" href="/AdminReports/Decline?Id=@Item.Pk_RequestId">Decline</a>
                                            }

                                        </td>

                                    </tr>
                                    i++;
                                }

                            }
                        }
                    </tbody>
                </table>

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="../vendor/jquery/jquery.min.js"></script>

<script>
    $.noConflict();
    $(document).ready(function () {
        var table = $('#example3').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>

