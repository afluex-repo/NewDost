@model Dost.Models.Wallet

@{
    ViewBag.Title = "FranchiseWalletLedger";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <ol class="breadcrumb">
            <li>
                <i class="clip-home-3"></i>
                <a href="#">
                  Accounts
                </a>
            </li>
            <li class="active">
                Franchise Wallet Ledger
            </li>
        </ol>
    </div>
</div>
<br />

@using (Html.BeginForm("FranchiseWalletLedger", "Accounts", FormMethod.Post, new { @id = "form1"}))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Franchise Wallet Ledger
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>Login Id / User Code</label>
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>From Date</label>
                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control",@readonly="true" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <label>To Date</label>
                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="form-group">
                                <br />
                                <input type="submit" id="btnSearch" class="btn btn-success pull-left" name="Search" value="Search" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <table id="example3" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Sr No.</th>
                                <th>Login Id</th>
                                <th>User Code</th>
                                <th>Transaction Date</th>
                                <th>Narration</th>
                                <th>CrAmount</th>
                                <th>DrAMount</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstewalletledger != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstewalletledger)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.LoginId</td>
                                            <td>@Item.UserCode</td>
                                            <td>@Item.AddedOn</td>
                                            <td>@Item.Narration</td>
                                            <td>@Item.CrAmount</td>
                                            <td>@Item.DrAmount</td>
                                            <td>@Item.EwalletBalance</td>

                                        </tr>
                                        i++;
                                    }

                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}
<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    </script>
<script>
    $.noConflict();
    $(document).ready(function () {
        var table = $('#example3').DataTable({
            lengthChange: false,
            buttons: ['copy', 'excel', 'pdf', 'colvis']
        });

        table.buttons().container()
            .appendTo('#example_wrapper .col-md-6:eq(0)');
    });
</script>